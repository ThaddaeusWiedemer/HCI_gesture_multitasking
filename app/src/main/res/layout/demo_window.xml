<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    >

        <Button
            android:id="@+id/top_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/left_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/left"
            app:layout_constraintBottom_toTopOf="@+id/bottom_but"
            app:layout_constraintEnd_toStartOf="@+id/number"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_but" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_but"
            app:layout_constraintEnd_toStartOf="@+id/right_but"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/left_but"
            app:layout_constraintTop_toBottomOf="@+id/top_but" />

        <Button
            android:id="@+id/right_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/right"
            app:layout_constraintBottom_toTopOf="@+id/bottom_but"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/number"
            app:layout_constraintTop_toBottomOf="@+id/top_but" />

        <Button
            android:id="@+id/bottom_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/down"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
